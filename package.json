{
  "name": "bakend",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "nodemon app.js",
    "dev": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/styles.css --watch",
    "build": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/styles.css --minify",
    "css": "npx tailwindcss -i ./src/input.css -o ./public/css/styles.css",
    "lint": "eslint . --fix",
    "test": "jest --detectOpenHandles --forceExit --runInBand",
    "test:ci": "jest --ci --maxWorkers=4 --detectOpenHandles --forceExit --logHeapUsage",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov --coverageDirectory=coverage --detectOpenHandles --forceExit",
    "test:debug": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --detectOpenHandles --verbose",
    "lint:fix": "eslint . --ext .js --fix",
    "sonar": "sonar-scanner"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/",
    "outputName": "jest-junit.xml",
    "includeConsoleOutput": true,
    "suiteNameTemplate": "{filepath}",
    "ancestorSeparator": " > "
  },
  "dependencies": {
    "@google-cloud/recaptcha-enterprise": "^5.13.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "express-handlebars": "^7.1.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "mongoose": "^8.3.1",
    "mysql": "^2.18.1",
    "mysql2": "^3.11.5",
    "nodemon": "^3.1.0",
    "prom-client": "^15.1.2",
    "sequelize": "^6.37.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/runtime-corejs3": "^7.27.0",
    "@eslint/js": "^9.24.0",
    "@types/jest": "^29.5.14",
    "@types/mysql": "^2.15.26",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "core-js": "^3.36.1",
    "eslint": "^9.24.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^15.4.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^4.1.0",
    "jest-junit": "^16.0.0",
    "postcss": "^8.4.35",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.1"
  }
}
