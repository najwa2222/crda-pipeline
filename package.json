{
  "name": "bakend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "nodemon app.js",
    "dev": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/styles.css --watch",
    "build": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/styles.css --minify",
    "css": "npx tailwindcss -i ./src/input.css -o ./public/css/styles.css",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "test": "jest --watch",
    "test:ci": "jest --ci --runInBand --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "sonar": "sonar-scanner"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": ["lcov", "text", "html"],
    "reporters": ["default", "jest-junit"],
    "testEnvironment": "node",
    "testMatch": ["**/test/**/*.test.js"],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/public/",
      "/kubernetes/"
    ],
    "globalSetup": "./test/setup.js",
    "globalTeardown": "./test/teardown.js"
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "outputName": "junit.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º "
  },
  "dependencies": {
    "@google-cloud/recaptcha-enterprise": "^5.13.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "express-handlebars": "^7.1.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "mongoose": "^8.3.1",
    "mysql": "^2.18.1",
    "mysql2": "^3.11.5",
    "nodemon": "^3.1.0",
    "prom-client": "^15.1.2",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/mysql": "^2.15.26",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.24.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "postcss": "^8.5.1",
    "supertest": "^7.1.0",
    "tailwindcss": "^3.4.17"
  }
}